<style type="text/css">
  table {
      border-spacing: 0;
      color: #333333;
      font-family: Arial, sans-serif;
  }
</style>

<container>

  <row>
    <columns small="12" >
      
      <table class="one-column" border="0" cellpadding="0" cellspacing="0" width="100%" style="border-spacing:0; border-left:1px solid #e8e7e5; border-right:1px solid #e8e7e5; border-bottom:1px solid #e8e7e5; padding: 10px" bg="#FFFFFF">

        <tr>
            <td align="center" style="padding:0px 40px 0px 40px"><p style="color:#262626; font-size:32px; text-align:center; font-family: Verdana, Geneva, sans-serif">Hello <%= name %>!</p>
               </td>
        </tr>
        <tr style="margin-bottom: 20px">
            <td align="center">
                <table border="0" cellpadding="0" cellspacing="0" style="Margin:0 auto; width: 50%">
                    <tr style="margin-bottom: 10px; width: 100%;">
                        <td align="center" >
                          <b style="color:#000000; font-size:16px; text-align:left; font-family: Verdana, Geneva, sans-serif; line-height:22px">
                          You have a message from <%= senderName %> </b><br/>
                          <br />
                        </td>
                    </tr>
                    <tr style=" width: 100%;">
                      <td align="center" style="width: 50%;">
                        <p style="color:#000000; font-size:13px; text-align:center; font-family: Verdana, Geneva, sans-serif; line-height:22px">
                         <%= message %> </p><br/>
                      </td>
                    </tr>
                    <tr style="width: 100%; text-align: center;">
                      <td style="width: 50%;"> <b style="color:#000000; font-size:13px; font-family: Verdana, Geneva, sans-serif; line-height:22px"><%= senderName %>s email:</b>  <%= senderEmail %> </td>
                    </tr>
                </table>
            </td>
        </tr>
      </table>
    </columns>
  </row>
</container>